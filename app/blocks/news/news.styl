.news
	display inline-block
	width 45%
	padding-top 0
	padding-bottom 0
	padding-right $(10px)
	padding-left $(10px)
	font-size 0
	margin-bottom $(30px)
	+below(991px)
		width 100%
	
	&__title
		font-size $(22px)
		text-align left
		margin-bottom $(20px)
		color $white
		
	&__text
		font-size $(14px)
		line-height $(20px)
		margin-bottom $(20px)
		width calc(100% - 15rem)
		color $white
		display inline-block
		vertical-align top
		+below(1199px)
			width 100%
	
	&__link
		text-align right
		a
			font-size $(14px)
			display inline-block
			color $blue-lt
			text-decoration none
			&:hover
				text-decoration underline
	
	&__img
		display inline-block
		vertical-align top
		width $(210px)
		height $(160px)
		margin-right $(15px)
		img
			max-width 100%
			height 100%
		+below(1199px)
			margin-bottom $(20px)
			