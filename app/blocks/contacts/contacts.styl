.contacts
	position relative
	
	&__map		
		iframe
			width 100%
			height $(310px)

	&__data
		position absolute
		top 0
		right $(80px)
		height $(310px)
		width $(290px)
		padding $(25px)
		background rgba(10,29,61,.9)
		+below(767px)
			position relative
			width 100%
			right 0
	
	&__title
		font-size $(20px)
		margin-bottom $(30px)
		
	&__item
		font-size $(14px)
		margin-bottom $(10px)